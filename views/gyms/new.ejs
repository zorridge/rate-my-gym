<% layout('layouts/boilerplate') -%>

<h1 class="text-center mb-3">New Gym</h1>
<div class="row">
    <div class="col-6 offset-3">
        <form action="/gyms" method="POST" novalidate class="needs-validation">
            <div class="form-floating mb-3">
                <input class="form-control" type="text" name="gym[title]" id="title" placeholder="Name"
                    autocomplete="off" required>
                <label class="form-label" for="title">Name</label>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="row g-2">
                <div class="col-md-8">
                    <div class="form-floating mb-3">
                        <input class="form-control" type="text" name="gym[location]" id="location"
                            placeholder="Location" autocomplete="off" required>
                        <label class="form-label" for="location">Location</label>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating mb-3">
                        <input class="form-control" type="number" name="gym[price]" id="price" placeholder="Price"
                            step="0.01" required>
                        <label class="form-label" for="price">Price ($)</label>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" type="text" name="gym[image]" id="image" placeholder="Image"
                    autocomplete="off" required>
                <label class="form-label" for="image">Image URL</label>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" name="gym[description]" id="description" placeholder="Description"
                    style="height: 150px;" required></textarea>
                <label for="description">Description</label>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <a class="btn btn-info" href="/gyms">Cancel</a>
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>