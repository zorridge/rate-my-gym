<% layout('layouts/boilerplate') -%>

<div class="row">
    <div class="col-10 offset-1">
        <div class="card mb-3">
            <img src="<%= gym.image %>" class="card-img-top" alt="<%= gym.title %>"
                style="width: 100%; height: 500px; object-fit: cover;">
            <div class="card-body">
                <h1 class="card-title"><%= gym.title %></h1>
                <p class="card-text"><small class="text-muted"><%= gym.location %></small></p>
                <p class="card-text fw-bold">Membership fee: $<%= gym.price %></p>
                <p class="card-text"><%= gym.description %></p>
                <a class="btn btn-info" href="/gyms/<%= gym._id %>/edit">Edit</a>
                <form class="d-inline" action="/gyms/<%= gym._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>