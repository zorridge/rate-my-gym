<% layout('layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheets/stars.css">

<div class="row">
    <!-- Gym Info -->
    <div class="col-8">
        <div class="card mb-3">
            <img src="<%= gym.image %>" class="card-img-top" alt="<%= gym.title %>"
                style="height: 500px; object-fit: cover;">
            <div class="card-body">
                <h1 class="card-title"><%= gym.title %></h1>
                <p class="card-text"><small>Submitted by: <strong><%= gym.author.username %></strong></small></p>
                <p class="card-text"><%= gym.location %></p>
                <p class="card-text">Membership fee: <strong>$<%= gym.price %></strong></p>
                <p class="card-text"><%= gym.description %></p>
                <% if (currentUser && gym.author.equals(currentUser._id)) { %>
                <!-- Alternatively, gym.author._id.toString() == currentUser._id.toString() can be used instead to compare ObjectID -->
                <div>
                    <a class="btn btn-info" href="/gyms/<%= gym._id %>/edit">Edit</a>
                    <form class="d-inline" action="/gyms/<%= gym._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Reviews -->
    <div class="col-4">
        <h2 class="mb-3">Leave a review!</h2>
        <!-- Form -->
        <% if (currentUser) { %>
        <form class="needs-validation mb-3" action="/gyms/<%= gym._id %>/reviews" method="POST" novalidate>
            <div class="mb-3">
                <fieldset class="starability-heartbeat">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                        aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" name="review[body]" id="body" placeholder="Review" style="height: 150px;"
                    required></textarea>
                <label for="body">Review</label>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
        <% } %>
        <!-- Review Cards -->
        <% for( let review of gym.reviews ) { %>
        <div class="card mb-3">
            <div class="card-header">Submitted by: <strong><%= review.author.username %></strong></div>
            <div class="card-body">
                <h5 class="card-title">
                    <p class="starability-result" data-rating="<%= review.rating %>">
                        Rated: <%= review.rating %> stars
                    </p>
                </h5>
                <p class="card-text">Review: <%= review.body %></p>
                <% if (currentUser && review.author.equals(currentUser._id)) { %>
                <form action="/gyms/<%= gym._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger btn-sm ms-auto">Remove</button>
                </form>
                <% } %>
            </div>
        </div>
        <% } %>
    </div>
</div>