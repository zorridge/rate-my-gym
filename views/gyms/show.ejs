<% layout('layouts/boilerplate') -%>

<div class="row">
    <div class="col-8">
        <div class="card mb-3">
            <img src="<%= gym.image %>" class="card-img-top" alt="<%= gym.title %>"
                style="height: 500px; object-fit: cover;">
            <div class="card-body">
                <h1 class="card-title"><%= gym.title %></h1>
                <p class="card-text"><small class="text-muted"><%= gym.location %></small></p>
                <p class="card-text fw-bold">Membership fee: $<%= gym.price %></p>
                <p class="card-text"><%= gym.description %></p>
                <a class="btn btn-info" href="/gyms/<%= gym._id %>/edit">Edit</a>
                <form class="d-inline" action="/gyms/<%= gym._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-4">
        <h2 class="mb-3 text-center">Reviews</h2>
        <form class="needs-validation mb-3" action="/gyms/<%= gym._id %>/reviews" method="POST" novalidate>
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" class="form-range" min="0" max="5" id="rating" name="review[rating]">
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" name="review[body]" id="body" placeholder="Review" style="height: 150px;"
                    required></textarea>
                <label for="body">Review</label>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
        <% for( let review of gym.reviews ) { %>
        <div class="card mb-3">
            <div class="card-header"><%= review._id %>
            </div>
            <div class="card-body">
                <h5 class="card-title">Rating: <%= review.rating %></h5>
                <p class="card-text">Review: <%= review.body %></p>
                <form action="/gyms/<%= gym._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger btn-sm ms-auto">Remove</button>
                </form>
            </div>
        </div>
        <% } %>
    </div>
</div>