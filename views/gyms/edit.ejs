<% layout('layouts/boilerplate') -%>

<h1 class="text-center mb-3">Edit Info - <%= gym.title %></h1>
<div class="row">
    <div class="col-6 offset-3">
        <form action="/gyms/<%= gym._id %>?_method=PUT" method="POST">
            <div class="form-floating mb-3">
                <input class="form-control" type="text" name="gym[title]" id="title" value="<%= gym.title %>"
                    autocomplete="off">
                <label class="form-label" for="title">Name</label>
            </div>
            <div class="row g-2">
                <div class="col-md-8">
                    <div class="form-floating mb-3">
                        <input class="form-control" type="text" name="gym[location]" id="location"
                            value="<%= gym.location %>" autocomplete="off">
                        <label class="form-label" for="location">Location</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating mb-3">
                        <input class="form-control" type="number" name="gym[price]" id="price" value="<%= gym.price %>"
                            step="0.01">
                        <label class="form-label" for="price">Price ($)</label>
                    </div>
                </div>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" type="text" name="gym[image]" id="image" value="<%= gym.image %>"
                    autocomplete="off">
                <label class="form-label" for="image">Image URL</label>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" name="gym[description]" id="description"
                    style="height: 150px;"><%= gym.description %></textarea>
                <label for="description">Description</label>
            </div>
            <a class="btn btn-info" href="/gyms/<%= gym._id %>">Cancel</a>
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>